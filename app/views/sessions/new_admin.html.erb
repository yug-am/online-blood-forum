<p id="alert"><%= alert %> </p>

<div class="container">
  <div class="row">
    <div class="col-sm">
      
    </div>
    <div class="col-sm">
      <div class="card" style="width: 20rem;">
 
   <%= image_tag "logo.png", class:"card-img-top" %>
  <h5 class="card-header">Admin : Login</h5>
  <div class="card-body">
    
    <p class="card-text">
    <%= form_tag sessions_path do |form|%>
<div class="form-group">
<%= label_tag :email_id %>
<%= text_field_tag :emailId,"",class:"form-control"%> 
</div>
<div class="form-group">
<%= label_tag :password %>
<%= password_field_tag :password ,"",class:"form-control"%>
</div>
<div class="form-group">
 <%= hidden_field_tag :admin_call, 1 ,class:"form-control" %>
 
<%= submit_tag "Login" ,class:" btn btn-primary"  %>
</div>
<% end %>
</p>
  </div>
</div>


    </div>
    <div class="col-sm">
            <%if notice %>
<%=render 'layouts/alert'%>
      <%end%>
    </div>
  </div>
</div>
