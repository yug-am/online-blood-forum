
<nav class="navbar bg-light">
  <div class="container-fluid">
    <a class="navbar-brand"><h4 style="color:  darkorchid; "> <%= image_tag 'img_dashboard.png', size:"30" %>    Admin Dashboard</h4></a>

  </div>
</nav>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Request ID</th>
        <th>Blood Group</th>
        <th>Location</th>
        <th>Action</th>

      </tr>
    </thead>

    <tbody>
      <%if @allocation_here %>
        <% if @donor_id_allo == -404%>
      <div class="alert alert-danger" role="alert">

         Last Request was Declined: RequestID <%= @request_allo.id %> of <%= @request_allo.bloodType %>
       on <%= @last_allocation %>

<%else%>
      <div class="alert alert-info" role="alert">
Last Request was Accepted: <%=@donor_allo.id%> to <%= @request_allo.id %> of <%= @request_allo.bloodType %>
       <%= @last_allocation %>

 <%end%>
</div>


          <%end%>
      <% @requests.each do |request| %>
           <% if request.isConfirmed==false%>
             <tr>

          <td> <%= request.id %></td>
          <td> <%= request.bloodType %></td>
          <td><%= request.location %></td>


          <td>
            <%@req_id=request.id%>

  <%= link_to "Handle Request", handle_req_path(@req_id), class:"btn btn-primary" %>

          </td>
        </tr>
    <%end%>
      <% end %>
    </tbody>
  </table>

