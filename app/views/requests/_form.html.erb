      <div class="card">
  <h5 class="card-header"> <%= image_tag "logo.png", class:"card-img-top" %></h5>
  <div class="card-body">
    <h5 class="card-title">Create A New Blood Request</h5>
    <p class="card-text">
<%= form_with(model: request) do |form| %>
  <% if request.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
        <% request.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



    <div style="visibility: hidden">

    <%= form.hidden_field :requestorID, value: current_requestor.id %>
  </div>

      <div class="form-group">
        <%= form.label :bloodType, style: "display: block" %>

     <%= form.select(:bloodType,Request::BLOOD_GROUP_LIST, {},{required: 'true', class: 'form-control'}) %>

   </div>
      <div class="form-group">


    <%= form.label :location, style: "display: block" %>
     <%= form.select(:location,Request::LOCATION_LIST, {},{required: 'true', class: 'form-control'}) %>
  </div>

<div style="visibility: hidden">
    <%= form.label :isConfirmed, style: "display: block" %>
    <%= form.check_box :isConfirmed %>
  </div>
<div style="visibility: hidden">
     <%= form.label :allocationCode, style: "display: block" %>
    <%= form.text_field :allocationCode %>
  </div>

  <div class="form-group">
    <%= form.submit nil ,:class=>"btn btn-primary" %>
  </div>
<% end %>


    </p>

