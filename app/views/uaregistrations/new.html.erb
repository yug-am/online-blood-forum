<h1>Sign Up</h1>

<%= form_with model: @user, url:sign_up_path do |form|%>
<% if @user.errors.any? %>
        <div class="alert alert-danger">
            <% @user.errors.full_messages do |message| %>
            <div><%= message %></div>
            <% end %>
        </div>
<% end %>

<div class="mb-3">
    <%= form.label :username %>
    <%= form.text_field :usern, class:"form-control", placeholder:"example@apple.com" %>
    </div>

    <div class="mb-3">
    <%= form.label :password %>
    <%= form.password_field :password, class:"form-control",placeholder:"password"  %>
    </div>

    <div class="mb-3">
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation, class:"form-control",placeholder:"password"  %>
    </div>

    <div class="mb-3">
        <%= form.submit "Lets Go", class: "btn btn-primary" %>
    </div>
<% end %>
