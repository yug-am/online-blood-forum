<div class="container mt-5">
  <div class="row">
    <div class="col-sm">
    </div>
    <div class="col-mm">
      <div class="card">
  <h5 class="card-header"> <%= image_tag "logo.png", class:"card-img-top" %></h5>
  <div class="card-body">
    <h5 class="card-title">Reset Password : Requestor</h5>
    <p class="card-text">
  <%= form_with url: "/reset_pwd", method: :post do |form| %>

 

  <div class="row">
    <div class="col">
      <div class="form-group">
     <%= form.label :email_id, style: "display: block" %>
    <%= form.email_field :emailId ,class:"form-control" , Placeholder:"Email Id" ,value:params[:emailId] %>
   
  </div>
    </div>
 
    <%= form.hidden_field :pwdtoken ,value: params[:token]%>
 
      <div class="col">
      <div class="form-group">
    <%= form.label :password, style: "display: block" %>
    <%= form.password_field :password ,class:"form-control" , Placeholder:"Password" %>
  </div>
    </div>
      <div class="col">
      <div class="form-group">
    <%= form.label :password_confirmation, style: "display: block" %>
    <%= form.password_field :password_confirmation ,class:"form-control" , Placeholder:"password" %>
  </div>
    </div>
    </div>



  <div class="form-group">
    <%= form.submit nil ,:class=>"btn btn-primary" %>
  </div>
<% end %>
    
    
    </p>
  
  </div>
</div>




    </div>
    <div class="col-sm">

    </div>
  </div>
</div>
